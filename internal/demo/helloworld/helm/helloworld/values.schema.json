{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Container image repository"
        },
        "tag": {
          "type": "string",
          "description": "Container image tag"
        }
      },
      "required": ["repository", "tag"],
      "additionalProperties": false
    },
    "temporal": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string",
          "description": "Temporal namespace"
        },
        "connectionName": {
          "type": "string",
          "description": "Name of existing TemporalConnection resource (optional)"
        },
        "hostPort": {
          "type": "string",
          "description": "Temporal server host and port (required if connectionName is empty)"
        },
        "tlsSecretName": {
          "type": "string",
          "description": "Name of the secret containing TLS certificates (required if connectionName is empty)"
        }
      },
      "required": ["namespace"],
      "additionalProperties": false,
      "anyOf": [
        {
          "properties": {
            "connectionName": {
              "type": "string",
              "minLength": 1
            }
          },
          "required": ["connectionName"]
        },
        {
          "required": ["hostPort", "tlsSecretName"]
        }
      ]
    },
    "rollout": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["Progressive", "AllAtOnce", "Manual"],
          "description": "Rollout strategy"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "rampPercentage": {
                "type": "integer",
                "minimum": 1,
                "maximum": 100,
                "description": "Percentage of traffic to route to new version"
              },
              "pauseDuration": {
                "type": "string",
                "pattern": "^[0-9]+(s|m|h)$",
                "description": "Duration to pause at this step"
              }
            },
            "required": ["rampPercentage", "pauseDuration"],
            "additionalProperties": false
          }
        }
      },
      "required": ["strategy"],
      "anyOf": [
        {
          "properties": {
            "strategy": {
              "const": "Progressive"
            }
          },
          "required": ["steps"]
        },
        {
          "properties": {
            "strategy": {
              "const": "AllAtOnce"
            }
          }
        },
        {
          "properties": {
            "strategy": {
              "const": "Manual"
            }
          }
        }
      ],
      "additionalProperties": false
    },
    "sunset": {
      "type": "object",
      "properties": {
        "scaledownDelay": {
          "type": "string",
          "pattern": "^[0-9]+(s|m|h)$",
          "description": "Delay before scaling down old version"
        },
        "deleteDelay": {
          "type": "string",
          "pattern": "^[0-9]+(s|m|h)$",
          "description": "Delay before deleting old version"
        }
      },
      "required": ["scaledownDelay", "deleteDelay"],
      "additionalProperties": false
    },
    "replicas": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of worker replicas"
    }
  },
  "required": [
    "image",
    "temporal",
    "rollout",
    "sunset",
    "replicas"
  ],
  "additionalProperties": false
}